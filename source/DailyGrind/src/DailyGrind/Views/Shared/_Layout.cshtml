<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DAILY GRIND</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/todo-mvc/node_modules/todomvc-common/base.css">
        <link rel="stylesheet" href="~/lib/todo-mvc/node_modules/todomvc-app-css/index.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/todo-mvc/node_modules/todomvc-common/base.css">
        <link rel="stylesheet" href="~/lib/todo-mvc/node_modules/todomvc-app-css/index.css">
        <link rel="stylesheet" href="~/css/site.css" asp-file-version="true" />
    </environment>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - DAILY GRIND</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/todo-mvc/node_modules/todomvc-common/base.js"></script>
        <script src="~/lib/todo-mvc/node_modules/handlebars/dist/handlebars.js"></script>
        <script src="~/lib/todo-mvc/node_modules/director/build/director.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/js/home.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/node_modules/todomvc-common/base.js"></script>
        <script src="~/lib/node_modules/handlebars/dist/handlebars.js"></script>
        <script src="~/lib/node_modules/director/build/director.js"></script>
        <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/js/site.js" asp-file-version="true"></script>
        <script src="~/js/home.js" asp-file-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
